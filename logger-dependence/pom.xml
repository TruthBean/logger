            </dependency>

            <dependency>
                <groupId>com.truthbean.logger</groupId>
                <artifactId>juli-bridge</artifactId>
                <version>${logger.version}</version>
            </dependency>

            <dependency>
                <groupId>com.truthbean.logger</groupId>
                <artifactId>logger-spring-boot-starter</artifactId>
                <version>${logger.version}</version>
            </dependency>

            <dependency>
                <groupId>com.truthbean.logger</groupId>
                <artifactId>logger-jcl</artifactId>
