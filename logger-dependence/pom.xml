            </dependency>

            <dependency>
                <groupId>com.truthbean.logger</groupId>
                <artifactId>slf4j-bridge</artifactId>
                <version>${logger.version}</version>
            </dependency>

            <dependency>
                <groupId>com.truthbean.logger</groupId>
                <artifactId>log4j2-bridge</artifactId>
                <version>${logger.version}</version>
            </dependency>

            <dependency>
                <groupId>com.truthbean.logger</groupId>
                <artifactId>jdk9-system-logger</artifactId>
                <version>${logger.version}</version>
